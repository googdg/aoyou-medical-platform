# Personal Blog Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# BASIC CONFIGURATION
# ===========================================

# Environment
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Server Configuration
HOST=0.0.0.0
PORT=3001
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Domain Configuration
DOMAIN=yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT and Session Secrets (CHANGE THESE!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CSRF Protection
CSRF_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# SQLite (default)
DB_PATH=./data/production.db

# MongoDB (optional)
MONGODB_URI=mongodb://localhost:27017/personal-blog

# MySQL (optional)
DB_HOST=localhost
DB_PORT=3306
DB_USER=blog_user
DB_PASSWORD=your_db_password
DB_NAME=personal_blog

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================

# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# AWS S3 (optional)
S3_ENABLED=false
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_CDN_URL=https://your-cdn-domain.com

# Cloudinary (optional)
CLOUDINARY_ENABLED=false
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# ANALYTICS AND SEO
# ===========================================

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GTM_ID=GTM-XXXXXXX

# Baidu Analytics (for Chinese users)
BAIDU_ANALYTICS_ID=your-baidu-id

# Search Console
GOOGLE_SITE_VERIFICATION=your-verification-code

# ===========================================
# CDN AND PERFORMANCE
# ===========================================

# CDN Configuration
CDN_ENABLED=false
CDN_PROVIDER=cloudflare
CDN_BASE_URL=https://cdn.yourdomain.com

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=80

# ===========================================
# MONITORING AND LOGGING
# ===========================================

# External Logging
EXTERNAL_LOGGING=false
LOG_SERVICE=winston-cloudwatch

# Error Tracking
ERROR_TRACKING=false
ERROR_SERVICE=sentry
ERROR_TRACKING_DSN=https://your-sentry-dsn

# Health Check
HEALTH_CHECK_ENABLED=true

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=7

# S3 Backup (optional)
BACKUP_S3_ENABLED=false
BACKUP_S3_BUCKET=your-backup-bucket

# ===========================================
# API CONFIGURATION
# ===========================================

# API Documentation
API_DOCS_ENABLED=false

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# PM2 Configuration
PM2_INSTANCES=max

# Docker Configuration
DOCKER_ENABLED=false

# Load Balancer
LB_ENABLED=false

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development Tools (only for development)
HOT_RELOAD=false
MOCK_API=false
DEBUG_SQL=false

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================

# Webhook for deployment notifications
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications
EMAIL_NOTIFICATION=admin@yourdomain.com

# ===========================================
# SOCIAL MEDIA INTEGRATION
# ===========================================

# Twitter
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===========================================
# INTERNATIONALIZATION
# ===========================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages
SUPPORTED_LANGUAGES=en,zh

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
COMMENTS_ENABLED=true
SEARCH_ENABLED=true
NEWSLETTER_ENABLED=false
ANALYTICS_ENABLED=true
PWA_ENABLED=true

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# reCAPTCHA
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Mailchimp (for newsletter)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# Disqus (for comments)
DISQUS_SHORTNAME=your-disqus-shortname