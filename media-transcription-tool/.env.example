# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置
DATABASE_URL=sqlite:./data/transcription.db
# 或使用PostgreSQL: postgresql://username:password@localhost:5432/transcription

# Redis配置 (可选，用于任务队列和缓存)
REDIS_URL=redis://localhost:6379

# OpenAI配置 (如果使用OpenAI API)
OPENAI_API_KEY=your-openai-api-key-here

# Whisper配置
WHISPER_MODEL=base
# 可选值: tiny, base, small, medium, large

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=500MB
TEMP_DIR=./temp

# 安全配置
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# CORS配置
CORS_ORIGIN=http://localhost:3000

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 任务队列配置
QUEUE_CONCURRENCY=2
MAX_QUEUE_SIZE=100

# 转录配置
DEFAULT_LANGUAGE=auto
ENABLE_WORD_TIMESTAMPS=true
CONFIDENCE_THRESHOLD=0.8

# 外部服务配置
YOUTUBE_DL_PATH=yt-dlp
FFMPEG_PATH=ffmpeg

# 监控配置 (可选)
ENABLE_METRICS=false
METRICS_PORT=9090